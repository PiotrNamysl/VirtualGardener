@page "/signup"
@rendermode InteractiveServer

<div class="body">
    <div class="login-register-container">
        <h1>Virtual Gardener</h1>
        <p>Please fill in the details to create your account.</p>

        <label>Name</label>
        <input type="text" id="username" name="username" @bind="_newUser.Name">

        <label>Email Address</label>
        <input type="email" id="email" name="email" @bind="_newUser.Email">

        <label>Password</label>
        <input type="password" id="password" name="password" @bind="_newUser.Password">

        <label>Confirm Password</label>
        <input type="password">
        
        <br>
        
        <button @onclick="Register">Register</button>

        <p>Already have an account? <a href="/">Login here</a></p>
    </div>
</div>