@rendermode InteractiveServer

<div class="login-register-container">
    <h1>Dodaj Roślinę</h1>
    <p class="text">Wprowadź dane swojej rośliny poniżej.</p>

    <div class="error-message">@ErrorMessage</div>

    <label for="plantName">Nazwa rośliny:</label>
    <input id="plantName" type="text" @bind="PlantName" placeholder="Wprowadź nazwę rośliny" />

    <label for="plantType">Typ rośliny:</label>
    <input id="plantType" type="text" @bind="PlantType" placeholder="Wprowadź typ rośliny (np. kwiat, drzewo)" />

    <label for="plantNotes">Notatki:</label>
    <textarea id="plantNotes" @bind="PlantNotes" placeholder="Wprowadź notatki o roślinie"></textarea>

    <button @onclick="AddPlant">Dodaj Roślinę</button>
</div>

@code {
    private string PlantName { get; set; }
    private string PlantType { get; set; }
    private string PlantNotes { get; set; }
    private string ErrorMessage { get; set; }

    private async Task AddPlant()
    {
        if (string.IsNullOrWhiteSpace(PlantName))
        {
            ErrorMessage = "Nazwa rośliny jest wymagana.";
            return;
        }

        try
        {
            // Pseudo kod: Wywołanie serwisu lub API
            // await PlantService.AddPlantAsync(new Plant { Name = PlantName, Type = PlantType, Notes = PlantNotes });

            ErrorMessage = string.Empty;
            PlantName = string.Empty;
            PlantType = string.Empty;
            PlantNotes = string.Empty;
            Console.WriteLine("Roślina została dodana.");
        }
        catch (Exception ex)
        {
            ErrorMessage = "Wystąpił błąd podczas dodawania rośliny.";
            Console.WriteLine(ex.Message);
        }
    }
}